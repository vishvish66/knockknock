#COUNT OF EVEN AND ODD NUM FROM GIVEN LIST
def count(list):
  even = 0
  odd = 0
  for i in list:
    if i % 2 == 0:
       even +=1
    else:
       odd+=1
  return even,odd        
list = [4,7,3,3,5,6,4,2,2,5,76]
even,odd = count(list)


print("even: {} and odd :  {}".format(even,odd))


 #PATTERNS USING FOR LOOPS AND WITH LESS CODE
 #I REPRESENT RAW
 #J REPRESENT COLUMN
 for i in range(4):   
  for j in range(4):         
     print("* ", end+"")       
  print() 
    
    #OUTPUT
    * * * * 
    * * * *  
    * * * * 
    * * * * 
for i in range(4):
 for j in range(4-i):
    print("* ", end+"")       
 print()
 

#pattern
num = int(input("enter num"))
for i in range(1,num+1):
   for j in range(num-i+1):
     print(" ",end="") 
   for j in range(i,0,-1):
     print(j,end="")
   for j in range(2,i+1):
     print(j,end="") 
   print()     
   
     1
    212
   32123
  4321234
 543212345
   
   
   
   
   
   
   

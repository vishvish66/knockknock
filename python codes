#fiboooooooooooooooooooo
def fib(n):
  a=0
  b=1
  print(a)
  print(b)
  for i in range(2,n):
    c = a+b
    a=b
    b=c
    print(c)


fib(10)
#fact using recursion
def fact(n):
  if n == 0:
    return 1

  return n * fact(n-1)
result = fact(5)
print(result)

-------------------------------------------------------------------------------------------------------------
#fiboooooooooooooooooooo
def fib(n):
  a=0
  b=1
  print(a)
  print(b)
  for i in range(2,n):
    c = a+b
    a=b
    b=c
    print(c)


fib(10)

